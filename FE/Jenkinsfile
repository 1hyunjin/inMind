pipeline {
    agent any

    tools {
        nodejs 'NodeJs 18'
    }

    stages {
        stage('FE Build') {
            steps {
                sh 'chmod -R 777 .'
                dir('FE') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Docker Compose Down') {
            steps {
                echo 'Stopping and removing the Docker container named inmind-nginx...'
                sh '''
                docker stop inmind-nginx || true
                docker rm inmind-nginx || true
                '''
            }
        }
        
        stage('Docker Compose Up') {
            steps {
                dir('FE') {
                    script {
                        def nginxConfPath = "${pwd()}/nginx.conf"
                        if (fileExists(nginxConfPath)) {
                            echo "nginx.conf found at ${nginxConfPath}"
                            sh "file ${nginxConfPath}" // 파일 유형 확인
                        } else {
                            error "nginx.conf not found at ${nginxConfPath}"
                        }
                    }
                    echo 'Deploying Docker containers...'
                    sh 'docker-compose up --build -d'
                }
            }
        }
    }
}
